{% extends 'master_back.html.twig' %}

{% block body %}
    {{ form(form) }}
    <h1>Liste des Avis</h1>

    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Liste des avis
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>note du Logement</th>
                            <th> Proprote</th>
                            <th> qualite Prix</th>
                            <th> accueil</th>
                            <th> Commentaire</th>
                            <th>Titre du Logement</th>
                            <th>Supprimer</th>

                        </tr>
                        </thead>
                        <tbody>
                        {%for Avis in Avis %}

                            <tr >

                                <td>{{ Avis.idAvis}}</td>
                                <td>{{ Avis.noteAvis}}</td>
                                <td>{{ Avis.proprete}}</td>
                                <td>{{ Avis.quaitePrix}}</td>
                                <td>{{ Avis.accueil}}</td>
                                <td>{{ Avis.descriptionAvis}}</td>
                                <td>{{ Avis.idlogement.titreAnnonce}}</td>
                                <td><a href="{{ path ('Avis_supprimer',{id:Avis.idAvis}) }}"> supprimer</a> </td>




                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>



{% endblock %}
