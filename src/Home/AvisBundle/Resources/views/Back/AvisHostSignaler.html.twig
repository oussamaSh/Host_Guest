{% extends '::master_back.html.twig' %}
{% block body %}

    <h1>Liste des Avis des Host</h1>

    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Liste des Host
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>ID Avis</th>
                            <th>Note Acceuil</th>
                            <th>Note Reactivite</th>
                            <th> Commentaire </th>
                            <th> Le Host</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {%for Avis in Avis %}

                            <tr >
                                <td>{{ Avis.idHost}}</td>
                                <td>{{ Avis.acceuilHost}}</td>
                                <td>{{ Avis.reactiviteHost}}</td>
                                <td>{{ Avis.descriptionAvis}}</td>
                                <td>{{ Avis.idMembre}}</td>
                                <td><a href="{{ path ('AvisHost_supprimer',{id:Avis.idHost}) }}"> supprimer</a> </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>



{% endblock %}
