{%  extends '::master_back.html.twig' %}

{% block body %}
    <script type="text/javascript" src="{{ asset('dist/js/jquery.js') }}"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript" src="{{ asset('dist/js/FavorisJS/feed.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="text-align:center">
                Liste  des status
            </div>
            <div id="dialog-confirm-delete" title="Delete this status ?" style="display:none  ;">
                <p><span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>These items will be permanently deleted and cannot be recovered. Are you sure?</p>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Contenu</th>
                            <th>Date d'ajout</th>
                            <th>Supprimer</th>
                            <th>Nb signalement</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                        <tr id="{{ post.id }}">
                            <td>{{ post.id }}</td>
                            <td>{{ post.user.nom }}</td>
                            <td>{{ post.user.prenom }}</td>
                            <td>{{ post.contenu }}</td>
                            <td>{{ post.dateAjout|date('Y-m-d') }} </td>
                            <td class="remove_stat" id="{{ post.id }}"><button type="button" class="btn btn-danger btn-circle" id="{{ post.id }}"><i id="{{ post.id }} class="fa fa-times"></i>
                                </button></td>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>


{%  endblock %}