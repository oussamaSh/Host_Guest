{%  extends '::master_back.html.twig' %}

{% block body %}

    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="text-align:center">
                Liste  des commentaire
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Contenu</th>
                            <th>Date d'ajout</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for commentaire in commentaires %}
                        <tr>
                            <td>{{ commentaire.id }}</td>
                            <td>{{ commentaire.user.nom }}</td>
                            <td>{{ commentaire.user.prenom }}</td>
                            <td>{{ commentaire.contenu }}</td>
                            <td>{{ commentaire.dateAjout|date('Y-m-d') }} </td>
                            <td><button type="button" class="btn btn-warning btn-circle" id="{{ commentaire.id }}" ><i class="fa fa-edit"></i>
                                </button></td>
                            <td><button type="button" class="btn btn-danger btn-circle" id="{{ commentaire.id }}"><i class="fa fa-times"></i>
                                </button></td>
                        </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>


{%  endblock %}