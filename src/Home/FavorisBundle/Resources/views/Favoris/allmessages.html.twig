{% for message in messages %}
<li class="left clearfix"><span class="chat-img pull-left">
                            <img src="{{ asset('Uploads/Images/') }}{{ message.getUser().getAvatar() }}" alt="User Avatar" class="img-circle" style="height: 40px;width: 40px;" />
                        </span>
    <div class="chat-body clearfix">
        <div class="header">
            <strong class="primary-font">{{ message.user.nom }} </strong> <small class="pull-right text-muted">
                <span class="glyphicon glyphicon-time"></span>{{  message.DateAjoutString() }}</small>
        </div>
        <p>
            {{  message.contenu }}
        </p>
    </div>
</li>
{% endfor %}