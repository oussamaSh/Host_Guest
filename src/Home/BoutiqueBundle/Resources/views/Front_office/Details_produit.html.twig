{% extends '::master_front.html.twig' %}

{% block body %}

    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Trouvez tous les details sur votre produit</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><a href="#">ACCUEIL</a></li>
                <li class="active">DETAILS DU PRODUIT</li>
            </ul>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container car-detail-page">
            <div class="row">
                <div id="main" class="col-md-9">

                    <div class="tab-container">
                        <ul class="tabs">
                            <li class="active">
                                <a href="#car-details" data-toggle="tab">Details du produit</a>
                            </li>

                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="car-details">
                                <div class="intro box table-wrapper full-width hidden-table-sms">
                                    <div class="col-sm-10 table-cell travelo-box">
                                        <dl class="term-description">


                                            <figure>
                                                <a href="#" class="hover-effect popup-gallery"><img width="400" height="300" alt="" src="{{ asset('uploads/' ~ produit.path) }}" ></a>
                                            </figure>
                                        </dl>
                                    </div>
                                    <div class="col-sm-10 table-cell">
                                        <div class="detailed-features clearfix">
                                            <h4 class="box-title">
                                                DETAILS DU PRODUIT
                                                <small>Merci pour votre fidélité</small>
                                            </h4>
                                            <div class="col-md-6">

                                                <div class="icon-box style11">
                                                    <div class="icon-wrapper">
                                                        <i class="soap-icon-clock"></i>
                                                    </div>

                                                    <dl class="details">
                                                        <dt class="skin-color">REFERENCE DU PRODUIT</dt>
                                                        <dd><label>Nom du produit :</label>{{ produit.nomProduit }}</dd>
                                                    </dl>
                                                </div>
                                                <div class="icon-box style11">
                                                    <div class="icon-wrapper">
                                                        <i class="soap-icon-departure"></i>
                                                    </div>
                                                    <dl class="details">
                                                        <dt class="skin-color">ETAT DU PRODUIT</dt>
                                                        <dd>{{ produit.etatProduit }}</dd>
                                                    </dl>
                                                </div>
                                                <div class="icon-box style11">
                                                    <div class="icon-wrapper">
                                                        <i class="soap-icon-departure"></i>
                                                    </div>
                                                    <dl class="details">
                                                        <dt class="skin-color">QUANTITE DANS LE STOCK</dt>
                                                        <dd>{{ produit.quantiteProduit }}</dd>
                                                    </dl>
                                                </div>
                                            </div>
                                            <div class="col-md-6">

                                                <div class="icon-box style11">
                                                    <div class="icon-wrapper">
                                                        <i class="soap-icon-clock"></i>
                                                    </div>
                                                    <dl class="details">
                                                        <dt class="skin-color">DESCRIPTION DU PRODUIT</dt>
                                                        <dd>{{ produit.descriptionProduit }}</dd>
                                                    </dl>
                                                </div>

                                                <div class="icon-box style11">
                                                    <div class="icon-wrapper">
                                                        <i class="soap-icon-clock"></i>
                                                    </div>
                                                    <dl class="details">
                                                        <dt class="skin-color">POINTS DE FIDELITE</dt>
                                                        <dd>{{ produit.prixProduit }}</dd>
                                                    </dl>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
    </section>

{% endblock %}