{%  extends '::master_back.html.twig' %}
{% form_theme Form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block body %}
    <div class="col-lg-5">
    {{ form(Form) }}
    </div>
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading" style="text-align:center">
                Liste  des produits
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>id</th>
                            <th>nom</th>
                            <th>prix</th>
                            <th>description</th>
                            <th>Etat</th>
                            <th>Quantit√©</th>

                        </tr>
                        </thead>
                        {% for produit in produits %}
                                <tr>
                                    <td><img alt="" src="{{ asset('uploads/' ~ produit.path) }}" height="270" width="230" /></td>                              <td>{{ produit.idProduit }}</td>
                                <td>{{ produit.idProduit }}</td>
                                <td>{{ produit.nomProduit }}</td>
                                <td>{{ produit.prixProduit }}</td>
                                <td>{{ produit.descriptionProduit }}</td>
                                <td>{{ produit.etatProduit }}</td>
                                <td>{{ produit.quantiteProduit }}</td>
                                <td><a href="{{ path('Delete_produit',{'id': produit.idProduit}) }}">Supprimer</a></td>
                                <td><a href="{{ path('Modifier_Produit',{'id':produit.idProduit}) }}">Modifier</a></td>

                            </tr>
                        {% endfor %}


                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>


{%  endblock %}