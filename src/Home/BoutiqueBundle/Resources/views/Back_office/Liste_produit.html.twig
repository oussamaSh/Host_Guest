{%  extends '::master_back.html.twig' %}

{% block body %}

    <div class="col-lg-12">

        <div class="panel panel-primary">
            <div class="panel-heading" style="text-align:center">
                Liste  des produits
            </div>


            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>{{ knp_pagination_sortable(pagination, 'Image', 'p.path') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'nom', 'p.nomProduit') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'prix', 'p.prixProduit') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'description', 'p.descriptionProduit') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Etat', 'p.etatProduit') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Quantit√©', 'p.quantiteProduit') }}</th>


                        </tr>
                        </thead>



                        {% for produit in pagination %}
                            <tr>
                                <td><img alt="" src="{{ asset('uploads/' ~ produit.path) }}" height="150" width="150" /></td>
                                <td>{{ produit.nomProduit }}</td>
                                <td>{{ produit.prixProduit }}</td>
                                <td>{{ produit.descriptionProduit }}</td>
                                <td>{{ produit.etatProduit }}</td>
                                <td>{{ produit.quantiteProduit }}</td>
                                <td><button type="button" class="btn btn-danger btn-circle"><a  href="{{ path('Delete_produit',{'id': produit.idProduit})}}" , onclick="return confirm('voulez vous vraiment supprimer ce badge ?')"><i class="fa fa-times"></i></a></button></td>
                                <td><button type="button" class="btn btn-warning btn-circle"><a href="{{ path('Modifier_Produit',{'id':produit.idProduit}) }}"><i class="fa fa-edit"></i></a></button></td>


                            </tr>
                        {% endfor %}

                    </table>


                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>


                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>


{%  endblock %}