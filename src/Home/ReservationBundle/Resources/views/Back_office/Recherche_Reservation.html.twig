{% extends '::master_back.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    {{ form (Form) }}



    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading" align="center">
                    Liste des reservations
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom du logement</th>
                                <th>Nom du visiteur</th>
                                <th>Prenom du visiteur</th>
                                <th>Date de debut</th>
                                <th>Date de fin</th>
                                <th>Prix Totale</th>
                                <th>Etat de la reservation</th>
                                <th>ID Host</th>
                                <th>Supprimer</th>
                            </tr>
                            </thead>
                            {% for reservation in reservations %}
                                {% if reservation.etat=="Annulé" %}
                                    <tbody>
                                    <tr class="danger">
                                        <td>{{ reservation.idReservation }}</td>
                                        <td>{{ reservation.idLogement.typeLogement }}</td>
                                        <td>{{ reservation.idMembre.nom }}</td>
                                        <td>{{ reservation.idMembre.prenom }}</td>
                                        <td>{{ reservation.dateDebut |date}}</td>
                                        <td>{{ reservation.dateFin|date}}</td>
                                        <td>{{ reservation.prixTot}}</td>
                                        <td>{{ reservation.etat}}</td>
                                        <td> <a href="#" title="INFO" data-toggle="popover" data-trigger="hover" data-placement="left" data-content="{{ reservation.idLogement.idMembre.nom}} {{ reservation.idLogement.idMembre.prenom}}       Email:      {{ reservation.idLogement.idMembre.email}}   Tel:  {{ reservation.idLogement.idMembre.numTel}} ">{{ reservation.idLogement.idMembre.id}}</a></td>
                                        {#   <td title="Header" data-toggle="popover" data-trigger="hover" data-content="Some content">{{ reservation.idLogement.idMembre.id}}</td>#}
                                        <td><a href="{{ path('Supprimer_Reservations',{idReservation:reservation.idReservation}) }}"><button type="button" class="btn btn-danger btn-circle" ><i class="fa fa-times"></i>
                                                </button></a></td>

                                    </tr>

                                    </tbody>
                                {% elseif reservation.etat=="Confirmé"%}
                                    <tbody>
                                    <tr class="info" >
                                        <td>{{ reservation.idReservation }}</td>
                                        <td>{{ reservation.idLogement.typeLogement }}</td>
                                        <td>{{ reservation.idMembre.nom }}</td>
                                        <td>{{ reservation.idMembre.prenom }}</td>
                                        <td>{{ reservation.dateDebut |date}}</td>
                                        <td>{{ reservation.dateFin|date}}</td>
                                        <td>{{ reservation.prixTot}}</td>
                                        <td>{{ reservation.etat}}</td>
                                        <td> <a href="#" title="INFO" data-toggle="popover" data-trigger="hover" data-placement="left" data-content="{{ reservation.idLogement.idMembre.nom}} {{ reservation.idLogement.idMembre.prenom}}       Email:      {{ reservation.idLogement.idMembre.email}}   Tel:  {{ reservation.idLogement.idMembre.numTel}} ">{{ reservation.idLogement.idMembre.id}}</a></td>

                                        <td><a href="{{ path('Supprimer_Reservations',{idReservation:reservation.idReservation}) }}"><button type="button" class="btn btn-danger btn-circle" ><i class="fa fa-times"></i>
                                                </button></a></td>

                                    </tr>

                                    </tbody>
                                {% else %}
                                    <tbody>
                                    <tr class="warning">
                                        <td>{{ reservation.idReservation }}</td>
                                        <td>{{ reservation.idLogement.typeLogement }}</td>
                                        <td>{{ reservation.idMembre.nom }}</td>
                                        <td>{{ reservation.idMembre.prenom }}</td>
                                        <td>{{ reservation.dateDebut |date}}</td>
                                        <td>{{ reservation.dateFin|date}}</td>
                                        <td>{{ reservation.prixTot}}</td>
                                        <td>{{ reservation.etat}}</td>
                                        <td> <a href="#" title="INFO" data-toggle="popover" data-trigger="hover" data-placement="left" data-content="{{ reservation.idLogement.idMembre.nom}} {{ reservation.idLogement.idMembre.prenom}}       Email:      {{ reservation.idLogement.idMembre.email}}   Tel:  {{ reservation.idLogement.idMembre.numTel}} ">{{ reservation.idLogement.idMembre.id}}</a></td>

                                        <td><a href="{{ path('Supprimer_Reservations',{idReservation:reservation.idReservation}) }}"><button type="button" class="btn btn-danger btn-circle" ><i class="fa fa-times"></i>
                                                </button></a></td>

                                    </tr>

                                    </tbody>
                                {% endif %}
                            {% endfor %}
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>


    </div>
    <script>
        $(document).ready(function(){
            $('[data-toggle="popover"]').popover();
        });
    </script>



{% endblock %}